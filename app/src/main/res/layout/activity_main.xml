<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@color/background_main_color"
    android:screenOrientation="portrait"
    >
<!--Фон взят из https://yandex.fr/images/search?text=картинка%20фитнес%20для%20приложения&from=tabbar&pos=13&img_url=https%3A%2F%2Fimage.winudf.com%2Fv2%2Fimage1%2FY29tLlBlZG9tZXRlclN0ZXBzVHJhY2tlcl9zY3JlZW5fNl8xNTQ5MjU2NjcwXzAyMA%2Fscreen-6.jpg%3Ffakeurl%3D1%26type%3D.jpg&rpt=simage -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:background="@color/mainOrange"
        android:backgroundTint="#121212"
        android:rotation="8"
        android:rotationX="17"
        android:rotationY="8"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/android_background" />

    <Button
        android:id="@+id/activity_main_btn_start"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="50dp"


        android:backgroundTint="#F46F08"
        android:drawableTint="#000000"
        android:rotationX="0"
        android:rotationY="0"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="@string/get_started"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:cornerRadius="20dp"
        app:icon="@android:drawable/ic_media_ff"
        app:iconTint="#040303"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />


</RelativeLayout>
